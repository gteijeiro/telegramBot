# Telegram bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Azure OpenAI configuration
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# Example: 2024-08-01-preview or similar supported version
AZURE_OPENAI_API_VERSION=2024-08-01-preview
# The model deployment name in Azure OpenAI (e.g., gpt-4o or your custom deployment name)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Optional: Default currency fallback if not present on invoice (e.g., USD, EUR)
DEFAULT_CURRENCY=USD